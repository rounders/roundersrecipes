begin
  require 'jeweler'
  Jeweler::Tasks.new do |gemspec|
    gemspec.name = "roundersrecipes"
    gemspec.summary = "Rounders recipes for Capistrano"
    gemspec.description = "Rounders recipes for Capistrano"
    gemspec.email = "fharbec@gmail.com"
    gemspec.homepage = "http://github.com/rounders/roundersrecipes"
    gemspec.authors = ["Francois Harbec"]
    gemspec.add_dependency "capistrano", ">= 2.5.0"
  end
rescue LoadError
  puts "Jeweler not available. Install it with: gem install jeweler"
end